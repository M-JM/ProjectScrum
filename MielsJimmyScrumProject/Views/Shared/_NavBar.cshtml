@inject SignInManager<ApplicationUser> signInManager;

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">
        <img src="~/images/download.png" width="30" height="30" />
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            @if (signInManager.IsSignedIn(User) && User.IsInRole("SuperAdmin"))
            {
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Companies
                    </a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-action="CompanyList" asp-controller="Companies">List Companies</a>
                        <a class="dropdown-item" asp-action="Create" asp-controller="Companies">Create</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Boards
                    </a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-action="BoardsList" asp-controller="Boards">List Boards</a>
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Manage
                    </a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-action="ListUsers" asp-controller="Administration">Users</a>
                        <a class="dropdown-item" asp-action="ListRoles" asp-controller="Administration">Roles</a>
                    </div>
                </li>
            }
            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <li class="nav-item active">
                    <a class="nav-link" asp-action="AdminIndex" asp-controller="Home">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Boards
                    </a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-action="BoardsList" asp-controller="Boards">List Boards</a>
                        <a class="dropdown-item" asp-action="Create" asp-controller="Boards">Create</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Manage
                    </a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-action="ListUsers" asp-controller="Administration"> Manage company Users</a>

                    </div>
                </li>
            }
        </ul>
        <ul class="navbar-nav ml-auto">
            @if (signInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <form method="post" asp-action="Logout" asp-controller="Account">
                        <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                            Logout: @User.Identity.Name
                        </button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
                </li>
            }
        </ul>
    </div>
</nav>
