@model BoardEditViewModel

@{
    ViewData["Title"] = "Update Board ";
  
}

    <form asp-action="Update" asp-controller="Boards" method="post" class="mt-3" enctype="multipart/form-data">
        <input hidden asp-for="Id" />


        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>


        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-action="Details" asp-controller="Boards" asp-route-id="@Model.Id"class="btn btn-secondary">Back</a>
            </div>
        </div>

    </form>

@section Scripts {
  
}
