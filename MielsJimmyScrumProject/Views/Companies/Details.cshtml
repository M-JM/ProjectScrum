@model CompanyDetailViewModel

@{
    ViewData["Title"] = "Details of Company";
    var company = Model.Company;
    var photoPath = $"~/Images/{company.PhotoPath ?? "noimage.png"}";
}


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@company.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" asp-append-version="true" src="@photoPath" />

                <h4>Company ID: @company.Id</h4>
                <h4>Created By: @company.CreatedBy</h4>
                <h4>Created Date: @company.CreatedDate</h4>
            </div>


            <a asp-action="Create" asp-controller="Boards" asp-route-companyid="@company.Id" class="btn btn-warning">Create new board</a>

            <a asp-action="AssignEmployees" asp-controller="Companies" asp-route-companyid="@company.Id" class="btn btn-warning">Assign Employees</a>


            <div class="card-footer text-center">
                <a asp-action="Update" asp-controller="Companies" asp-route-id="@company.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-controller="Companies" asp-route-id="@company.Id" class="btn btn-danger">Delete</a>
                
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="AdminIndex" asp-controller="Home" class="btn btn-secondary">Back</a>
                }
                else
                {
                     <a asp-action="CompanyList" asp-controller="Companies" class="btn btn-secondary">Back</a>
                }
            </div>
        </div>
    </div>
</div>
