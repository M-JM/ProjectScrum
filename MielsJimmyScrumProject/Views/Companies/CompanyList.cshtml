@model IEnumerable<Company>
@{
    ViewBag.Title = "Company List";
}

<div class="row h-25 mt-lg-4 mb-lg-4" >

    <a asp-action="Create" asp-controller="Companies" class="btn btn-success mb-2 ml-3">Create a new company</a>
</div>

<div class="card-deck mt-3">
    @foreach (var company in Model)
    {
        var photoPath = $"~/Images/{company.PhotoPath ?? "noimage.png"}";




        <div class="card m-3" style="width: 9rem; max-width:25%">
            <img src="@photoPath" asp-append-version="true" class="card-img-top" style="height:200px;width:auto;" />
            <div class="card-header">
                <h3 class="text-center">@company.Name</h3>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Details" asp-controller="Companies" asp-route-id="@company.Id" class="btn btn-info">Details</a>
                <a asp-action="Update" asp-controller="Companies" asp-route-id="@company.Id" class="btn btn-warning">Update</a>
                <a asp-action="Delete" asp-controller="Companies" asp-route-id="@company.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>