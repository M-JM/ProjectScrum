@model Company
@inject SignInManager<ApplicationUser> signInManager;

@{
    ViewData["Title"] = "Delete Company";
    var photoPath = $"~/Images/{Model.PhotoPath ?? "noimage.png"}";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <h3>Are you sure you want to delete this?</h3>

                <img class="card-img-top imageThumbnail" asp-append-version="true" src="@photoPath" />

                <h4>Company ID: @Model.Id</h4>
                <h4>Created By: @Model.CreatedBy</h4>
                <h4>Created Date: @Model.CreatedDate</h4>

            </div>
            <div class="card-footer text-center">
                <a class="btn btn-success" asp-action="DeleteSure" asp-controller="Companies" asp-route-id="@Model.Id">
                    Are you sure you want to delete ?
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="AdminIndex" asp-controller="Home" class="btn btn-secondary">Back</a>
                }
                else
                {
                    <a asp-action="details" asp-controller="Companies" asp-route-id="@Model.Id" class="btn btn-secondary">Back</a>
                }
            </div>
        </div>
    </div>
</div>

