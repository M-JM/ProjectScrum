@model  BoardTask

@{
    ViewData["Title"] = "Delete Board";
}
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Title</h1>
                </div>

                <div class="card-body text-center">
                    <h3>Are you sure you want to delete this?</h3>

                    <h4>Task ID: @Model.Id</h4>
                    <h4>Task Name: @Model.Title</h4>
                    <h4>Task Description: @Model.Description</h4>
                    <h4>Created By: @Model.CreatedBy</h4>
                    <h4>Created Date: @Model.CreatedDate</h4>

                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-success" asp-action="DeleteSure" asp-controller="Tasks" asp-route-taskid="@Model.Id">Are you sure you want to delete ?</a>
                    <a asp-action="TaskList" asp-controller="Tasks" asp-route-boardid="@Model.BoardId" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </div>
    </div>

